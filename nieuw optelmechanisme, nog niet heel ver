x = len(oorspronkelijkeong)
            for i in range(x):
                for j in range(i+1,x):
                    uniekevar = []
                    for k in range(len(oorspronkelijkeong[i])-1):
                        uniekevar.append(oorspronkelijkeong[i][k])
                    for k in range(len(oorspronkelijkeong[j])-1):
                        if oorspronkelijkeong[j][k] not in uniekevar:
                            uniekevar.append(oorspronkelijkeong[j][k])
                    aantal = len(oorspronkelijkeong[i]) -1 + len(oorspronkelijkeong[j]) -1
                    aantaluniek = len(uniekevar)
                    if aantal - aantaluniek > 2 - 2:
                        optellen(oorspronkelijkeong[i],oorspronkelijkeong[j])
                        
