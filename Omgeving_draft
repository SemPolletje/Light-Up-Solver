def Omgeving(r,k,zwarte_velden):
    omgeving = [[r,k]]
    nog_niet_klaar = True
    i=1
    #Links
    while nog_niet_klaar:
        if [r,k-i] in zwarte_velden:
            nog_niet_klaar = False
        else:
            omgeving += [[r,k-i]]
            i += 1
    nog_niet_klaar = True
    i=1
    #rechts
    while nog_niet_klaar:
        if [r,k+i] in zwarte_velden:
            nog_niet_klaar = False
        else:
            omgeving += [[r,k+i]]
            i += 1
    nog_niet_klaar = True
    i=1
    #boven
    while nog_niet_klaar:
        if [r-i,k] in zwarte_velden:
            nog_niet_klaar = False
        else:
            omgeving += [[r-i,k]]
            i += 1
    nog_niet_klaar = True
    i=1
    #onder
    while nog_niet_klaar:
        if [r+i,k] in zwarte_velden:
            nog_niet_klaar = False
        else:
            omgeving += [[r+i,k]]
            i += 1
    
    return omgeving


            

    
